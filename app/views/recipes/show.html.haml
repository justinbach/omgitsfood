%h1= "Recipe: #{@recipe.title}"
#recipeForm
  = error_messages_for :recipe
  - form_for @recipe, :url => { :action => "update" } do |recipe_form|
    = hidden_field(:recipe, :id)
    = label(:recipe, :title)
    = recipe_form.text_field :title
    %br
    = label(:recipe, :ingredients)
    = recipe_form.text_area :ingredients
    %br
    = label(:recipe, :directions)
    = recipe_form.text_area :directions
    %br
    = submit_tag 'Update recipe'