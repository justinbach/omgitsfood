%h1 Plan your meals
#yesterday
  %h2 Yesterday
  = button_to "New", "/"+(Time.now-60*60*24).strftime("%b-%d-%Y").downcase+"/meals/new/", :method => :get
#today
  %h2 Today
  = button_to "New", "/"+Time.now.strftime("%b-%d-%Y").downcase+"/meals/new/", :method => :get
#tomorrow
  %h2 Tomorrow
  = button_to "New", "/"+(Time.now+60*60*24).strftime("%b-%d-%Y").downcase+"/meals/new/", :method => :get